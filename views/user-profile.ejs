    <link rel="stylesheet" href="../assets/css/user_profile.css">
    <img src="<%= user.avatar %>" alt="<%= user.name %>" width="100" height="100">

    
    
    <% if ( user.id == profile_user.id){%>
        <!-- if user matches then show the update profile form  -->
        <form action="/users/update/<%=profile_user.id%>" method="post" enctype="multipart/form-data">
            <input type="text" name="name" value="<% profile_user.name%>" placeholder="to update your name" required>
            <input type="email" name="email" value="<% profile_user.email%>" placeholder="to update email id" required>
            <input type="file" name="avatar" />
            <input type="submit" value="update">
        </form>
    <%}
    else{%>
        <!-- else show the profile info -->
        <p><%=profile_user.name %></p>
        <p><%=profile_user.email %></p>
    <%}%>
    
